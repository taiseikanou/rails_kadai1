<h3>ユーザー情報一覧</h3>
<p><%= link_to "ユーザー新規登録", :new_post %></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date %></td>
        <td><%= post.end_date %></td>
        <td><%= post.all_day %></td>
        <td><%= post.updated_at %></td>
        <td><%= link_to "詳細", post %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= link_to "削除",  post_path(post.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


