<h3>予定一覧</h3>
<p><%= link_to "新規追加", :new_post %></p>

<% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
<% end %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= "#{post.start_date.year}年 #{post.start_date.month}月 #{post.start_date.day}日" %></td>
        <td><%= "#{post.end_date.year}年 #{post.end_date.month}月 #{post.end_date.day}日" %></td>
        <td><%= post.all_day ? "◯" : "" %></td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "詳細", post %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= link_to "削除",  post_path(post.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


