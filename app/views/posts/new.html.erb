<div class="container">
  <h3>ユーザー新規作成</h3>
  <%= render "shared/error", obj: @post %>
  <%= form_with model: @post, class: "mt-3" do |f| %>
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :start_date, "開始日" %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date, "終了日" %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <div class="form-check">
        <%= f.check_box :all_day, class: "form-check-input" %>
        <%= f.label :all_day, "終日の場合はチェックを入れます", class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :memo, "スケジュールメモ" %>
      <%= f.text_area :memo, class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.submit "保存", class: "btn btn-primary mr-2" %>
      <%= link_to "キャンセル", :posts, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
